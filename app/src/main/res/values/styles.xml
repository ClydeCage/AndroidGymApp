<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.HadongGymApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/CustomChipStyle</item> <!-- Reference the custom chip style -->
    </style>

    <!-- Custom Chip Style -->
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@drawable/chip_background_state_list</item> <!-- Use a state list drawable -->
        <item name="android:textColor">@drawable/chip_text_color_state_list</item> <!-- Use a state list drawable -->
        <item name="chipStrokeColor">@color/color_chip_default_background</item> <!-- Corrected color name -->
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Chip</item>
    </style>

</resources> 